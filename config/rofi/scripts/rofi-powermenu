chosen=$(printf "Power Off\nRestart\nLog Off" | rofi -dmenu -i -cycle -theme-str 'mainbox{children:[listview];}window{height:20%;}' -hover-select -me-select-entry '' -me-accept-entry MousePrimary)

case "$chosen" in
	"Power Off") poweroff ;;
	"Restart") reboot ;;
	"Log Off") pkill x ;;
	*) exit 1 ;;
esac
